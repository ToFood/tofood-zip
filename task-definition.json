{
  "family": "tofood-task",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "tofood-app",
      "image": "${AWS_REPOSITORY_URI}:latest",
      "memory": 512,
      "cpu": 256,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ]
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "executionRoleArn": "${ROLE_ARN}",
  "taskRoleArn": "${ROLE_ARN}",
  "memory": "512",
  "cpu": "256"
}
